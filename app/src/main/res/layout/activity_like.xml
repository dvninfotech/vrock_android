<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/home"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cltop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/_2e2c37"
        >
        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/back_button"
            android:background="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            app:layout_constraintTop_toTopOf="@id/ibBack"
            app:layout_constraintBottom_toBottomOf="@id/ibBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/roboto_regular"
            />
        <ImageButton
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/three_dots"
            android:background="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:maxLines="1"
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:paddingStart="@dimen/_10sdp"
        android:hint="@string/search"
        android:visibility="gone"
        android:background="@drawable/round_stroke"
        android:textColor="@color/color_gray"
        android:fontFamily="@font/roboto_regular"
        android:drawablePadding="@dimen/_5sdp"
        android:singleLine="true"
        android:textColorHint="@color/color_gray"
        android:inputType="text"
        android:imeOptions="actionDone"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/cltop"
        android:drawableStart="@drawable/resources_search"
        android:layout_marginTop="@dimen/_8sdp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSearch"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_80sdp"
        android:clipToPadding="false"
        android:background="@color/colorBlack"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>