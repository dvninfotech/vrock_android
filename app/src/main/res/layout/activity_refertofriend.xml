<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="@color/colorBlack"

    tools:context=".view.settings.ReferToFriendActivity">

    <TextView

        android:layout_width="0dp"

        android:layout_height="wrap_content"

        android:background="@color/_2e2c37"

        android:fontFamily="@font/roboto_bold"

        android:paddingVertical="@dimen/_10sdp"

        android:text="@string/refertofriend"

        android:textAlignment="center"

        android:clickable="false"

        android:textColor="@color/colorWhite"

        android:textSize="@dimen/_13sdp"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/tvBack"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:drawableStart="@drawable/back_button"

        android:fontFamily="@font/roboto_bold"

        android:paddingHorizontal="@dimen/_10sdp"

        android:paddingVertical="@dimen/_10sdp"

        android:textColor="@color/colorWhite"

        android:textSize="@dimen/_12sdp"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <ImageView

        android:id="@+id/ivRefer"

        android:layout_width="match_parent"

        android:layout_height="@dimen/_200sdp"

        android:src="@drawable/refer_to_friend"

        android:layout_marginTop="@dimen/_60sdp"

        android:layout_marginHorizontal="@dimen/_20sdp"

        app:layout_constraintTop_toBottomOf="@+id/tvBack"/>

    <TextView

        android:id="@+id/textView"

        android:layout_width="0dp"

        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/_10sdp"

        android:clickable="false"

        android:fontFamily="@font/roboto_regular"

        android:paddingHorizontal="@dimen/_30sdp"

        android:paddingVertical="@dimen/_10sdp"

        android:text="@string/referdesc"

        android:textAlignment="center"

        android:textColor="@color/colorWhite"

        android:textSize="@dimen/_13sdp"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/ivRefer" />

    <TextView

        android:layout_width="0dp"

        android:layout_height="wrap_content"

        android:layout_marginHorizontal="@dimen/_30sdp"

        android:layout_marginBottom="@dimen/_10sdp"

        android:clickable="false"

        android:fontFamily="@font/roboto_regular"

        android:text="@string/shareyourcode"

        android:textAlignment="viewStart"

        android:textColor="@color/colorWhite"

        android:textSize="@dimen/_13sdp"

        app:layout_constraintBottom_toTopOf="@+id/tvCode"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/textView"

        app:layout_constraintVertical_bias="1.0"

        tools:targetApi="lollipop" />

    <TextView

        android:id="@+id/tvCode"

        android:layout_width="0dp"

        android:layout_height="wrap_content"

        android:fontFamily="@font/roboto_regular"

        android:paddingVertical="@dimen/_10sdp"

        android:background="@drawable/bg_round_corner_stroke"

        tools:text="WERDE098 "

        android:textIsSelectable="true"

        android:textAlignment="viewStart"

        android:clickable="false"

        android:textColor="@color/colorWhite"

        android:textSize="@dimen/_13sdp"

        android:layout_marginBottom="@dimen/_10sdp"

        android:layout_marginHorizontal="@dimen/_30sdp"

        android:layout_marginTop="@dimen/_10sdp"

        android:paddingHorizontal="@dimen/_10sdp"

        app:layout_constraintBottom_toTopOf="@+id/tvWhatsapp"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        tools:targetApi="lollipop" />

    <ImageView

        android:id="@+id/ivShare"

        android:layout_marginEnd="@dimen/_10sdp"

        app:layout_constraintBottom_toTopOf="@+id/tvCode"

        app:layout_constraintTop_toBottomOf="@+id/tvCode"

        app:layout_constraintEnd_toEndOf="@+id/tvCode"

        android:src="@drawable/share_1"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"/>

    <TextView

        android:id="@+id/tvWhatsapp"

        android:layout_width="0dp"

        android:layout_height="wrap_content"

        android:fontFamily="@font/roboto_bold"

        android:paddingVertical="@dimen/_10sdp"

        android:background="@drawable/bg_round_corner_red"

        android:backgroundTint="@color/_25d366"

        android:text="@string/whatsapp"

        android:textAlignment="center"

        android:clickable="false"

        android:textColor="@color/colorWhite"

        android:textSize="@dimen/_13sdp"

        android:layout_marginBottom="@dimen/_20sdp"

        android:layout_marginHorizontal="@dimen/_30sdp"

        android:layout_marginTop="@dimen/_10sdp"

        android:paddingHorizontal="@dimen/_30sdp"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        tools:targetApi="lollipop" />

</androidx.constraintlayout.widget.ConstraintLayout>