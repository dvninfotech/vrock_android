<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_10sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

      <ImageView
          android:id="@+id/imgGift"
          android:src="@drawable/ic_coin"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_width="@dimen/_60sdp"
          android:layout_height="@dimen/_60sdp"/>
    <TextView
        android:id="@+id/tvGiftName"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_regular"
        android:text="Silver"
        app:layout_constraintStart_toStartOf="@id/imgGift"
        app:layout_constraintEnd_toEndOf="@id/imgGift"
        app:layout_constraintTop_toBottomOf="@id/imgGift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvCoins"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_regular"
        android:text="100 coins"
        app:layout_constraintStart_toStartOf="@id/imgGift"
        app:layout_constraintEnd_toEndOf="@id/imgGift"
        app:layout_constraintTop_toBottomOf="@id/tvGiftName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>