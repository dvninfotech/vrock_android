<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBlack"
    android:paddingVertical="@dimen/_10sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProfileImage"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:paddingTop="@dimen/_5sdp"
            android:background="@color/colorBlack"
            android:id="@+id/imgSong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/music" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/cvProfileImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cvProfileImage"
        app:layout_constraintTop_toTopOf="@+id/cvProfileImage" >

        <TextView
            android:id="@+id/tvNotiTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:fontFamily="@font/roboto_bold"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="Taki Taki"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAlignment="viewStart"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_13sdp"/>

        <TextView
            android:id="@+id/tvNotiData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:clickable="false"
            android:fontFamily="@font/roboto_bold"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:maxLines="1"
            android:visibility="gone"
            android:ellipsize="end"
            android:text="DJ Snake (feat. Selena Gomez, Ozun..."
            android:textAlignment="viewStart"
            android:textColor="@color/_e8e8e8"
            android:textSize="@dimen/_10sdp"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>