<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="@color/colorBlack"

    tools:context=".view.settings.ReferToFriendActivity">

    <TextView
        android:id="@+id/tvHeader"

        android:layout_width="0dp"

        android:layout_height="wrap_content"

        android:background="@color/_2e2c37"

        android:fontFamily="@font/roboto_bold"

        android:paddingVertical="@dimen/_10sdp"

        android:text="Review"

        android:textAlignment="center"

        android:clickable="false"

        android:textColor="@color/colorWhite"

        android:textSize="@dimen/_13sdp"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/tvBack"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:drawableStart="@drawable/back_button"

        android:fontFamily="@font/roboto_bold"

        android:paddingHorizontal="@dimen/_10sdp"

        android:paddingVertical="@dimen/_10sdp"

        android:textColor="@color/colorWhite"

        android:textSize="@dimen/_12sdp"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/lineartop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tvHeader"

        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_40sdp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Total Gift Coins:"
                android:textColor="@color/colorWhite"
                android:layout_weight="0.5"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/_10sdp"
                />
            <TextView
                android:id="@+id/tvTotalGiftCoins"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorWhite"
                android:layout_weight="1.5"
                android:textSize="14sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_40sdp"
            android:weightSum="2"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Google Pay fee 30%:"
                android:textColor="@color/colorWhite"
                android:layout_weight=".5"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/_10sdp"
                />
            <TextView
                android:id="@+id/tvGooglePayFee"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorWhite"
                android:layout_weight="1.5"
                android:textSize="14sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_40sdp"
            android:weightSum="2"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Platform Pay fee 5%:"
                android:textColor="@color/colorWhite"
                android:layout_weight="0.5"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/_10sdp"
                />
            <TextView
                android:id="@+id/tvPlateformPayFee"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorWhite"
                android:layout_weight="1.5"
                android:textSize="14sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_40sdp"
            android:weightSum="2"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="After Deduction Coins:"
                android:textColor="@color/colorWhite"
                android:layout_weight=".5"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/_10sdp"
                />
            <TextView
                android:id="@+id/tvAfterDeductionFee"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorWhite"
                android:layout_weight="1.5"
                android:textSize="14sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_40sdp"
            android:weightSum="2"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Redeem Coins upto 95%:"
                android:textColor="@color/colorWhite"
                android:layout_weight=".5"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/tvRedeemCoinupto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_40sdp"
            android:weightSum="2"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Wallet Gift Coins:"
                android:textColor="@color/colorWhite"
                android:layout_weight=".5"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/_10sdp"
                />
            <TextView
                android:id="@+id/tvWalletBallence"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorWhite"
                android:layout_weight="1.5"
                android:textSize="14sp"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="*After Deduction coins should be more than 5000*"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_40sdp"
        />


    <TextView
        android:id="@+id/RedeemCoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redeem Coins"
        android:textColor="@color/colorWhite"
        android:layout_weight="1"
        android:textSize="@dimen/_24sdp"
        app:layout_constraintTop_toBottomOf="@+id/lineartop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_50sdp"
        />
    <TextView
        android:id="@+id/tvRedeemCoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorWhite"
        android:layout_weight="1"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@+id/RedeemCoin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        />


    <TextView

        android:id="@+id/tvRedeemButton"

        android:layout_width="0dp"

        android:layout_height="wrap_content"

        android:fontFamily="@font/roboto_bold"

        android:paddingVertical="@dimen/_10sdp"

        android:background="@drawable/bg_round_corner_red"

        android:backgroundTint="@color/color_red"

        android:text="@string/redeem_coins"

        android:textAlignment="center"

        android:clickable="false"

        android:textColor="@color/colorWhite"

        android:textSize="@dimen/_13sdp"

        android:layout_marginBottom="@dimen/_20sdp"

        android:layout_marginHorizontal="@dimen/_30sdp"

        android:layout_marginTop="@dimen/_10sdp"

        android:paddingHorizontal="@dimen/_30sdp"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        tools:targetApi="lollipop" />

</androidx.constraintlayout.widget.ConstraintLayout>