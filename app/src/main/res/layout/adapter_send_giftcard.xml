<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBlack"
    >

    <RelativeLayout
        android:id="@+id/ivProfile"
        android:layout_width="@dimen/_38sdp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/round_corner_whit"
        android:layout_marginStart="@dimen/_5sdp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/amazon"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amazon Voucher"
        app:layout_constraintStart_toEndOf="@+id/ivProfile"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toTopOf="@id/ivProfile"
        android:textSize="12dp"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginStart="@dimen/_10sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹10"
        app:layout_constraintStart_toEndOf="@+id/ivProfile"
        android:textColor="@color/colorWhite"
        android:textSize="12dp"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginStart="@dimen/_10sdp"
         app:layout_constraintTop_toBottomOf="@+id/tvName"
        />
    <TextView
        android:id="@+id/tvPowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 points"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toTopOf="@id/tvName"
        android:textSize="12dp"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginEnd="@dimen/_12sdp"
        />
    <TextView
        android:id="@+id/tvFollow"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_23sdp"
        android:background="@drawable/button_rounde_red"
        android:text="Redeem"
        android:fontFamily="@font/roboto_regular"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPowers"
        android:layout_marginEnd="@dimen/_10sdp"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_marginTop="@dimen/_2sdp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>